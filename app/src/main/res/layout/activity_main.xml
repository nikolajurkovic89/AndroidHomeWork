<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_height="256dp"
            android:src="@drawable/header_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/movie_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/image_view"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/animation_text"
            android:background="@drawable/ic_label"
            android:minWidth="70dp"
            android:text="Animation"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view"/>

        <TextView
            android:id="@+id/drama_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_label"
            android:minWidth="70dp"
            android:gravity="center"
            android:text="Drama"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/animation_text"
            app:layout_constraintTop_toBottomOf="@id/image_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_label"
            android:minWidth="70dp"
            android:text="Family"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/drama_text"
            app:layout_constraintTop_toBottomOf="@id/image_view"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/evaluation_text"
            android:text="7.3/10"
            android:textColor="@color/light_gray"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/image_view"
            app:layout_goneMarginRight="13dp"
            tools:layout_editor_absoluteX="310dp" />
    
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/star_image"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_image"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/image_view"
            app:layout_constraintLeft_toRightOf="@id/evaluation_text" />

        <TextView
            android:id="@+id/directors_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingLeft="20dp"
            android:text="Directors"
            android:textColor="@color/medium_gray"
            app:layout_constraintTop_toBottomOf="@id/animation_text" />

        <TextView
            android:id="@+id/actor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingLeft="8dp"
            android:text="actor_name"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/animation_text"
            app:layout_constraintTop_toBottomOf="@id/animation_text" />

        <TextView
            android:id="@+id/stars_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingLeft="20dp"
            android:text="Stars"
            android:textColor="@color/medium_gray"
            app:layout_constraintTop_toBottomOf="@id/directors_textView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingLeft="8dp"
            android:text="star_name"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/animation_text"
            app:layout_constraintTop_toBottomOf="@id/actor_name" />

        <EditText
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="180dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintTop_toBottomOf="@id/animation_text"/>
        <Button
            android:id="@+id/play_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/play_movie"
            android:textSize="16dp"
            android:backgroundTint="@color/pastel_blue"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
